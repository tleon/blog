{# templates/blog/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
<h2>{{ category.name }}</h2>

<table class="table">
  <thead>
    <th>Id</th>
    <th>Title</th>
    <th>Content</th>
  </thead>
  <tbody>

    {% for a in articles %}
    <tr>
      <td> {{ a.id }} </td>
      <td> {{ a.title }}</td>
      <td>{{ a.content }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}